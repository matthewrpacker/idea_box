<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-2">
      <table>
        <thead class="idea-head">
          <h1 class="table-title">All Ideas</h1>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Quality</th>
          </tr>
        </thead>
        <tbody class="idea-body">
          <% @ideas.each do |idea| %>
          <tr class="idea">
            <td><%= idea.title %></td>
            <td><%= idea.body.truncate(100, separator: ' ') %></td>
            <td><%= idea.rating %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
